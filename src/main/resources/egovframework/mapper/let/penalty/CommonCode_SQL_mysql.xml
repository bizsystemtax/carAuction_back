<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CommonCodeDAO">

	<resultMap id="selectList" type="egovframework.penalty.CommonCodeVO">
		<result property="cmmCd" column="CMM_CD"/>
		<result property="cmmCdNm" column="CMM_CD_NM"/>
	</resultMap>
	
	<select id="getSelectCode" parameterType="egovframework.penalty.CommonCodeVO" resultMap="selectList">
		SELECT CMM_CD
		     , CMM_CD_NM
		  FROM TB_CMM_CD_LDGR
		 WHERE USE_YN = 'Y'
		   AND CMM_CD_GUBUN = '01'
	</select>
</mapper>